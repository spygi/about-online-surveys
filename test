from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.desired_capabilities import DesiredCapabilities

from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait # available since 2.4.0
from selenium.webdriver.support import expected_conditions as EC # available since 2.26.0

desired_cap = {'browser': 'Chrome', 'browser_version': '56.0', 'os': 'OS X', 'os_version': 'Sierra', 'resolution': '1024x768'}

driver = webdriver.Chrome()

driver.implicitly_wait(8) # seconds

driver.get("THIS IS A SITE WHICH I WON'T TELL YOU")
# Not required but cool to know: driver.execute_script("window.scrollTo(0, 1110);")
try:
    driver.switch_to_frame(driver.find_element_by_class_name("mv-widget-iframe"));
    element = WebDriverWait(driver, 5).until(EC.element_to_be_clickable((By.CLASS_NAME, "Option-inner-index-5")))
    element = driver.find_element_by_class_name("Option-inner-index-5")
    element.click()
    # driver.save_screenshot('screenshot.png')
finally:
    driver.quit()

